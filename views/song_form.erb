<label>Title:</label> 
<input type="text" name="song[title]" value="<%= @song.title %>">
<label>Length:
  <span class="small">(in seconds)</span>
</label>
<input type="number" name="song[length]" value=<%= @song.length %> >
<label>Release Date:
  <span class="small">in Format: dd/mm/yyyy</span>
</label>
<input type="text" name="song[released_on]" value=<%= @song.released_on.strftime("%m/%d/%Y") if @song.released_on %> >
<label>Lyrics:</label>
<textarea cols=50 rows=20 type="text" name="song[lyrics]"><%= @song.lyrics %></textarea>
<br>
<button type="submit">Save Song</button>
